<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kaspa Price Tracker</title>
    <style>
        body { 
            margin: 0; 
            padding: 10px; 
            font-family: Arial, sans-serif;
        }
        #kaspa-price {
            font-size: 16px; /* Adjust for better fit in Google Sites */
            font-weight: bold;
            color: #007BFF;
            background-color: white;
        }
    </style>
</head>
<body>
    <div id="kaspa-price">Loading Kaspa price...</div>
    <script>
    function fetchKaspaPrice() {
        fetch('https://api.coingecko.com/api/v3/simple/price?ids=kaspa&vs_currencies=usd')
            .then(response => response.json())
            .then(data => {
                document.getElementById('kaspa-price').innerText = `KAS Price: $${data.kaspa.usd.toFixed(4)}`;
            })
            .catch(error => {
                console.error('Error fetching price:', error);
                document.getElementById('kaspa-price').innerText = 'Error fetching price.';
            });
    }

    // Fetch price on load
    fetchKaspaPrice();

    // Update every minute
    setInterval(fetchKaspaPrice, 60000);
    </script>
</body>
</html>
